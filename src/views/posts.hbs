<link rel="stylesheet " href="css/posts_style.css">
<link rel="stylesheet " href="css/comments_style.css">

<!-- The categorie name -->
<div class="categorie-name text-center row">
    <div class="backBtn col-2 my-5">
        <a href="/category?id={{post.[0].catid}}">
            <button><i class="fas fa-arrow-circle-left pr-2"></i>Back to All</button>
        </a>
    </div>
    <div class="col-8 ml-3">
        <h1 class="my-5 px-5 py-2 ml-5">{{post.[0].title}}</h1>
    </div>
</div>
<div class="the_body row">
    <!-- Categorie information -->
    <div class="col-4">
        <div class="categorie-info col-9">
            <div class="ci_box m-3 p-5">
                <table>
                    <tr>
                        <th>Category:</th>
                        <th>{{post.[0].categoryName}}</th>
                    </tr>
                    <tr>
                        <th>Posts:</th>
                        <th>{{post.[0].catposts}}</th>
                    </tr>
                    <tr>
                        <th>Created by:</th>
                        <th>{{post.[0].username}}</th>
                    </tr>
                    <tr>
                        <th>Subscribed:</th>
                        <th>{{post.[0].catsubs}}</th>
                    </tr>
                </table>
                <br>
                <p><strong>More information: </strong> </p>
                <p>
                    {{post.[0].catinfo}}
                </p>
                {{#if subBtn}}
                <div class="ci_btn">
                    <button class=" mx-5 px-5 py-2" onclick="location.href='subscribe?id={{post.[0].catid}}'">{{subBtn}}</button>
                </div>
                {{/if}}
            </div>


        </div>
    </div>


    <!-- post area -->
    <div class="posts_box col-8 row">

        <!-- the posts -->
        <div class="posts col-7">
            <div class="p-3">
                <label for="name">Posted by {{post.[0].username}}</label>
                <br>
                <br>
                <p>{{post.[0].content}}</p>
                <br>
                <label for="likes" class="likesNumber0">Likes:{{post.[0].likes}} Comments:{{post.[0].comments}}</label>
                <br>
                {{#if canlike}}
                <button class="likeBtn px-4 py-1 " id="b10"
                    onclick="location.href='/like?id={{post.[0].id}}'">{{likeBtn}}</button>
                {{/if}}
            </div>
        </div>

        <!-- create comments -->
        <div class="comment_box col-7 mt-5">
            <div class="post_comment p-2">
                <form action="/comment" method="POST" class="mt-3">
                    <input type="hidden" name="postid" value="{{post.[0].id}}">
                    <textarea id="c_posts" class="txtArea" name="commentContent" rows="4" cols="50"
                        placeholder="Answer here..." required></textarea>
                    <button class="px-3 py-1 mx-2" id="b20">Comment</button>
                </form>
            </div>

            <ul>
                <li id="a0" class="text-white">
                    {{#each post}}
                    {{#if this.commentUsername}}
                    <div class="the_comment" style="background-color: rgba(0, 0, 0, .6);">
                        <label for="name">{{this.commentUsername}}</label>
                        <p id="p0" >
                            {{this.comCon}}
                        </p>
                        <p class="text-right"><small>at: {{this.comDate}}</small></p>
                    </div>
                    {{/if}}
                    {{/each}}
                </li>
            </ul>
        </div>